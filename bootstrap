#!/bin/bash
DEBIAN_RELEASE="squeeze"
BACKPORTS_REPO="http://backports.debian.org/debian-backports"
PUPPET_REPO="http://apt.puppetlabs.com"
OTHER_DEPENDS="
  pwgen
  xemacs21
  postgresql
"
PUPPET_PACKAGES="
  puppet
  puppet-el
  puppetmaster-passenger
  puppetdb
"
APT_OPTIONS='-qq -y'

function add_backports_repository()
{
# Add backports for nginx and other packages if needed
    grep -q ${BACKPORTS_REPO} /etc/apt/sources.list || \
	echo "deb ${BACKPORTS_REPO} ${DEBIAN_RELEASE}-backports main" \
	>> /etc/apt/sources.list
    apt-get -q update > /dev/null
}

function add_puppet_repository()
{
# Add puppet repository for later puppet releases
    grep -q ${PUPPET_REPO} /etc/apt/sources.list || \
	echo "deb ${PUPPET_REPO} ${DEBIAN_RELEASE} main" \
	>> /etc/apt/sources.list
    wget -O puppet_repo.gpg ${PUPPET_REPO}/pubkey.gpg
    apt-key add puppet_repo.gpg
    apt-get -q update > /dev/null
}

function install_dependencies()
{
# Install required packages interactively, so postgresql can
# prompt for a root password
    apt-get ${APT_OPTIONS} install ${OTHER_DEPENDS}
}

function install_puppet()
{
# Install puppet packages
    apt-get ${APT_OPTIONS} --install-recommends install ${PUPPET_PACKAGES}
}

function configure_postgresql()
{
# Configure postgresql for storeconfigs
    PUPPET_POSTGRESQL_PASSWORD=`pwgen -s 8 1`
	#     echo Enter postgresql root password below to create puppet database:
	#     mysqladmin -v -u root -p create puppet
	#     echo
	#     echo Enter mysql root password below to grant privileges to puppet user:
	#     echo grant all privileges on puppet.\* to puppet@localhost identified \
	# by \'${PUPPET_MYSQL_PASSWORD}\'\; | mysql -v -u root -p
}

function configure_puppetmaster()
{
# Create puppet.conf, including storeconfigs support
    cp puppet.conf /etc/puppet/puppet.conf
    perl -pi.bak \
	-e "s/__FQDN__/${FQDN}/g;s/__PASSWORD__/${PUPPET_POSTGRESQL_PASSWORD}/g" \
	/etc/puppet/puppet.conf
	chmod 640 /etc/puppet/puppet.conf
	chown root:puppet /etc/puppet/puppet.conf
    mkdir /etc/puppet/plugins
}

function create_minimal_manifest()
{
# Finishing up minimal puppet manifests
    for env in production dev; do
	    mkdir -p /etc/puppet/environments/${env}/manifests
	    if [ ! -f /etc/puppet/environments/${env}/manifests/site-${env}.pp ]; then
		echo "node default { notify{\"It works (in ${env} environment)!\":} }" \
			> /etc/puppet/environments/${env}/manifests/site-${env}.pp
	    fi
	done
	mkdir -p /etc/puppet/manifests
	if [ ! -f /etc/puppet/manifests/unknown_environment.pp ]; then
		echo "node default {notify{\"This host is not attached to an environment.\":} }" \
			> /etc/puppet/manifests/unknown_environment.pp
	fi
}

function restart_apache_and_puppetdb()
{
	/etc/init.d/puppetdb restart
	/etc/init.d/apache2 restart
}

function test_puppet_client()
{
    puppet agent -vt
}

BASEDIR=`dirname $0`
FQDN=`hostname --fqdn`

cd ${BASEDIR}
FUNCTION_LIST="
	add_backports_repository
	add_puppet_repository
	install_dependencies
	configure_postgresql
	install_puppet
	configure_puppetmaster
	create_minimal_manifest
	restart_apache_and_puppetdb
	test_puppet_client
	"
# FUNCTION_LIST="$*"
for name in ${FUNCTION_LIST}; do
  echo === Running ${name}\(\) ===
  ${name}
  echo
done
